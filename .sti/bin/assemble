#!/bin/bash

echo "*** start assemble"
if [ -n "$STI_SCRIPTS_PATH" ]; then
    echo "*** call default assemble at $STI_SCRIPTS_PATH/assemble"
    . "$STI_SCRIPTS_PATH/assemble"
else
    STI_SCRIPTS_PATH=/usr/local/sti
    if [ -r $STI_SCRIPTS_PATH/assemble ]; then
        echo "*** call default assemble at $STI_SCRIPTS_PATH/assemble"
        . "$STI_SCRIPTS_PATH/assemble"
    fi
    STI_SCRIPTS_PATH=/usr/libexec/s2i
    if [ -r $STI_SCRIPTS_PATH/assemble ]; then
        echo "*** call default assemble at $STI_SCRIPTS_PATH/assemble"
        . "$STI_SCRIPTS_PATH/assemble"
    fi
fi
echo "*** custom assemble part, execute unit test"
bundle exec rake test
echo "*** end assemble"
